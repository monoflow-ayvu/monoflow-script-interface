{
    "name": "interface",
    "version": "1.0.0",
    "description": "Controle de interface. Definir cores, teclados, etc.",
    "settingsSchema": {
        "display": "form",
        "components": [
            {
                "label": "Cor da Interface",
                "widget": "choicesjs",
                "tableView": true,
                "data": {
                    "values": [
                        {
                            "label": "Padrão",
                            "value": "default"
                        },
                        {
                            "label": "Modo Dark",
                            "value": "dark"
                        },
                        {
                            "label": "Modo Light",
                            "value": "light"
                        }
                    ]
                },
                "key": "interfaceColor",
                "type": "select",
                "input": true,
                "defaultValue": "default"
            },
            {
                "label": "Estilo teclado do login",
                "widget": "choicesjs",
                "tableView": true,
                "data": {
                    "values": [
                        {
                            "label": "Padrão",
                            "value": "default"
                        },
                        {
                            "label": "Numeric",
                            "value": "numeric"
                        },
                        {
                            "label": "Email",
                            "value": "email-address"
                        },
                        {
                            "label": "ASCII",
                            "value": "ascii-capable"
                        },
                        {
                            "label": "Números e Pontuação",
                            "value": "numbers-and-punctuation"
                        },
                        {
                            "label": "url",
                            "value": "url"
                        },
                        {
                            "label": "Pad Numérico",
                            "value": "number-pad"
                        },
                        {
                            "label": "Pad Telefone",
                            "value": "phone-pad"
                        },
                        {
                            "label": "Pad Telefone e Nome",
                            "value": "name-phone-pad"
                        },
                        {
                            "label": "Pad Decimal",
                            "value": "decimal-pad"
                        },
                        {
                            "label": "Twitter",
                            "value": "twitter"
                        },
                        {
                            "label": "Google (Pesquisa Web)",
                            "value": "web-search"
                        },
                        {
                            "label": "Senha Visível",
                            "value": "visible-password"
                        }
                    ]
                },
                "key": "loginKeyboardType",
                "type": "select",
                "input": true,
                "defaultValue": "default"
            },
            {
                "label": "Definir volume do telefone",
                "tooltip": "O volume é normalmente usado para alarmes. Se um valor for definido, não pode ser editado. Sempre vai ficar nesse valor.",
                "tableView": false,
                "key": "enableVolumeControl",
                "type": "checkbox",
                "input": true,
                "defaultValue": false
            },
            {
                "label": "Volume",
                "tooltip": "0 - 100%",
                "suffix": "%",
                "mask": false,
                "tableView": false,
                "delimiter": false,
                "requireDecimal": false,
                "inputFormat": "plain",
                "truncateMultipleSpaces": false,
                "validate": {
                    "required": true,
                    "min": 0,
                    "max": 100
                },
                "key": "volume",
                "conditional": {
                    "show": true,
                    "when": "enableVolumeControl",
                    "eq": "true"
                },
                "type": "number",
                "input": true
            },
            {
                "label": "Definir brilho da tela",
                "tableView": false,
                "key": "enableBrightnessControl",
                "type": "checkbox",
                "input": true,
                "defaultValue": false
            },
            {
                "label": "Brilho",
                "tooltip": "0 - 100%",
                "suffix": "%",
                "mask": false,
                "tableView": false,
                "delimiter": false,
                "requireDecimal": false,
                "inputFormat": "plain",
                "truncateMultipleSpaces": false,
                "validate": {
                    "required": true,
                    "min": 0,
                    "max": 100
                },
                "key": "brightness",
                "conditional": {
                    "show": true,
                    "when": "enableBrightnessControl",
                    "eq": "true"
                },
                "type": "number",
                "input": true
            },
            {
                "type": "button",
                "label": "Submit",
                "key": "submit",
                "disableOnInvalid": true,
                "input": true,
                "tableView": false
            }
        ]
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "webpack --mode production",
        "watch": "webpack --mode production --watch",
        "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
        "size": "npm run build && size-limit",
        "deploy": "node .scripts/deploy.js",
        "deploy-force": "node .scripts/deploy.js --force",
        "minor": "npm run build && bump minor --commit --tag --push --all",
        "release": "npm run build && bump major --commit --tag --push --all",
        "test": "jest --silent"
    },
    "browserslist": [
        "ie 6"
    ],
    "size-limit": [
        {
            "path": "dist/bundle.js",
            "limit": "100 kb",
            "gzip": false
        }
    ],
    "devDependencies": {
        "@babel/core": "7.21.8",
        "@babel/plugin-transform-arrow-functions": "7.21.5",
        "@babel/preset-env": "7.21.5",
        "@babel/preset-typescript": "7.21.5",
        "@jsdevtools/version-bump-prompt": "6.1.0",
        "@size-limit/preset-big-lib": "8.2.4",
        "@types/commander": "2.12.2",
        "@types/firebase": "3.2.1",
        "@types/jest": "29.5.1",
        "@types/lodash": "4.14.194",
        "@types/uuid": "9.0.1",
        "babel-loader": "9.1.2",
        "brotli-webpack-plugin": "1.1.0",
        "commander": "10.0.1",
        "compression-webpack-plugin": "10.0.0",
        "graphql": "16.6.0",
        "graphql-request": "6.1.0",
        "inquirer": "9.2.6",
        "jest": "29.5.0",
        "mobx-keystone": "1.6.0",
        "semver": "7.5.1",
        "size-limit": "8.2.4",
        "ts-loader": "9.4.3",
        "typed-emitter": "2.1.0",
        "typescript": "4.9.5",
        "webpack": "5.83.1",
        "webpack-cli": "5.1.1"
    },
    "dependencies": {
        "@fermuch/monoutils": "0.0.37",
        "@fermuch/telematree": "9.23.0",
        "cross-fetch": "3.1.6",
        "firebase": "9.22.0",
        "lodash": "4.17.21",
        "mobx": "6.9.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "web.js",
            "js",
            "web.ts",
            "ts",
            "web.tsx",
            "tsx",
            "json",
            "web.jsx",
            "jsx",
            "node"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/private/jest/setup.ts"
        ]
    }
}
